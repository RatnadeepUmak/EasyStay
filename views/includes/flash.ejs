<% if(successMsg && successMsg.length){ %>
    <div class="alert alert-success mt-2 alert-dismissible fade show col-6 offset-3" role="alert">
        <%= successMsg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> 
<% } %>

<% if(errorMsg && errorMsg.length){ %>
    <div class="alert alert-danger mt-2 alert-dismissible fade show col-6 offset-3" role="alert">
        <%= errorMsg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> 
<% } %>
